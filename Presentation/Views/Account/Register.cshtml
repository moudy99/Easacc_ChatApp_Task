    @model Application.ViewModel.RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "_authenticationLayout";
}
<div class="card">
    <h2 class="text-center fw-bold  text-secondary">User Register</h2>
    <hr />

    <form asp-action="Register">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <input asp-for="Name" class="form-control" placeholder="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>


        <div class="form-group">
            <input asp-for="Email" class="form-control" placeholder="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input asp-for="Password" class="form-control" type="password" placeholder="Password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirm Password" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary btn-block" />
        </div>
    </form>

    <div class="login-link">
        <a asp-action="Login">Already have an account? Login</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
