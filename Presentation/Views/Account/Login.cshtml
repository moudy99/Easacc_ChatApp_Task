@model Application.ViewModel.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "_authenticationLayout";
}
<div class="card">
    <h2 class="text-center fw-bold  text-secondary">Customer Register</h2>
    <hr />

    <form asp-action="Register">
        <div asp-validation-summary="All" class="text-danger"></div>



        <div class="form-group">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input asp-for="Email" class="form-control" placeholder="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input asp-for="Password" class="form-control" type="password" placeholder="Password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>


        <div class="form-group">
            <input type="submit" asp-action="Login" value="Login" class="btn btn-primary" />
        </div>
    </form>

    <div class="login-link">
        <p>Don't have an account?</p>
        <a asp-action="Register">Register now</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
